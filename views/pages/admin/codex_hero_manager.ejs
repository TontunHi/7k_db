<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
        <link rel="stylesheet" href="/css/pages/admin/codex_hero_manager.css">
</head>

<body class="text-light">

    <nav class="navbar-modern">
        <div class="d-flex align-items-center gap-3">
            <img src="/images/about_website/logo_seven_knights_rebirth.png" alt="Logo" style="height: 40px;">
            <span class="nav-brand-text">7K Rebirth <span style="font-weight:400; opacity:0.7;">| Codex
                    Manager</span></span>
        </div>
        <div class="d-flex align-items-center gap-3">
            <a href="/admin/dashboard" class="nav-btn"><i class="bi bi-grid-fill"></i> Dashboard</a>
            <a href="/admin/logout" class="nav-btn"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </div>
    </nav>

    <div class="codex-layout">
        <div class="sidebar-panel">
            <div class="sidebar-header">
                <span class="fw-bold text-white"><i class="bi bi-collection me-2 text-warning"></i>Groups</span>
                <button class="btn btn-sm btn-outline-secondary border-0 text-warning" data-bs-toggle="modal"
                    data-bs-target="#addGroupModal" title="Add Group">
                    <i class="bi bi-plus-lg"></i>
                </button>
            </div>

            <div class="group-list">
                <% if(groups && groups.length> 0) { %>
                    <% groups.forEach(grp=> { %>
                        <div class="group-wrapper <%= activeGroupId == grp.id ? 'active' : '' %>">
                            <a href="/admin/codex/hero?cat_id=<%= activeCatId %>&group_id=<%= grp.id %>"
                                class="group-link">
                                <span>
                                    <%= grp.name %>
                                </span>
                            </a>

                            <div class="group-actions">
                                <form action="/admin/api/codex/group/delete" method="POST"
                                    onsubmit="return confirm('Delete Group: <%= grp.name %>? This will delete all heroes inside!');">
                                    <input type="hidden" name="id" value="<%= grp.id %>">
                                    <input type="hidden" name="type" value="hero">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-sm text-secondary p-0 border-0 hover-danger"><i
                                            class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="text-center mt-5 text-muted">
                                    <i class="bi bi-inbox fs-2 mb-2 d-block opacity-50"></i>
                                    <small>No groups found</small>
                                </div>
                                <% } %>
            </div>
        </div>

        <div class="content-panel">
            <div class="top-tabs-bar">
                <span class="text-muted small fw-bold me-2 text-uppercase"
                    style="letter-spacing: 1px;">Categories:</span>
                <% if(categories && categories.length> 0) { %>
                    <% categories.forEach(cat=> { %>
                        <div class="cat-tab-wrapper <%= activeCatId == cat.id ? 'active' : '' %>">
                            <a href="/admin/codex/hero?cat_id=<%= cat.id %>" class="cat-link">
                                <%= cat.name %>
                            </a>
                            <form action="/admin/api/codex/category/delete" method="POST"
                                onsubmit="return confirm('Delete Category: <%= cat.name %>?');" class="d-flex">
                                <input type="hidden" name="id" value="<%= cat.id %>">
                                <input type="hidden" name="type" value="hero">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-sm p-0 text-secondary border-0"
                                    title="Delete Category"><i class="bi bi-x"></i></button>
                            </form>
                        </div>
                        <% }) %>
                            <% } %>

                                <button type="button" class="btn-add-mini ms-2" data-bs-toggle="modal"
                                    data-bs-target="#addCategoryModal" title="Add Category">
                                    <i class="bi bi-plus-lg"></i>
                                </button>
            </div>

            <div class="hero-grid-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <% const currentGroup=groups.find(g=> g.id == activeGroupId); %>
                            <h3 class="m-0 text-white fw-bold">
                                <%= currentGroup ? currentGroup.name : 'Select a Group' %>
                            </h3>
                            <small class="text-muted">Click on a hero to manage skill priority</small>
                    </div>
                    <% if(activeGroupId) { %>
                        <button class="btn btn-warning px-4 rounded-pill shadow-sm"
                            onclick="openAddHeroModal('<%= activeGroupId %>', '<%= currentGroup ? currentGroup.name : '' %>')">
                            <i class="bi bi-plus-lg me-1"></i> Add Hero
                        </button>
                        <% } %>
                </div>

                <div class="row g-3">
                    <% if(heroes.length===0) { %>
                        <div class="col-12">
                            <div class="d-flex flex-column align-items-center justify-content-center py-5 text-muted"
                                style="border: 2px dashed #333; border-radius: 10px;">
                                <i class="bi bi-people display-4 mb-3 opacity-25"></i>
                                <h5>No heroes in this group</h5>
                                <% if(!activeGroupId) { %>
                                    <p class="small">Please select a group from the sidebar</p>
                                    <% } %>
                            </div>
                        </div>
                        <% } %>

                            <% heroes.forEach(hero=> { %>
                                <div class="col-6 col-sm-4 col-md-3 col-xl-2">
                                    <div class="hero-card" onclick="openSkillManager(
                                    '<%= hero.id %>', 
                                    '<%= hero.name %>', 
                                    '<%= hero.detectedSkillFolder %>', 
                                    <%= JSON.stringify(hero.skillImages) %>,
                                    <%= JSON.stringify(hero.skillOrder || []) %>
                                 )">
                                        <img src="/images/heroes/<%= hero.image_name %>" class="hero-img">
                                        <div class="hero-name">
                                            <%= hero.name %>
                                        </div>
                                        <div class="text-center mb-3">
                                            <span
                                                class="badge bg-dark border border-secondary text-secondary rounded-pill"
                                                style="font-weight:normal; font-size: 0.7rem;">
                                                <i class="bi bi-lightning-fill text-warning"></i> Manage Skills
                                            </span>
                                        </div>
                                        <a href="/admin/codex/hero/delete/<%= hero.id %>?cat_id=<%= activeCatId %>&group_id=<%= activeGroupId %>"
                                            class="btn btn-outline-danger btn-sm w-100 mt-auto"
                                            onclick="event.stopPropagation(); return confirm('Delete <%= hero.name %>?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Add Main Category</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/codex/category/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body">
                        <label class="form-label text-muted small fw-bold">CATEGORY NAME</label>
                        <input type="text" name="name" class="form-control" placeholder="e.g. Special Heroes" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-warning px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addGroupModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Add Group to <span class="text-warning">
                            <%= categories.find(c=> c.id == activeCatId)?.name %>
                        </span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/codex/group/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body">
                        <input type="hidden" name="category_id" value="<%= activeCatId %>">
                        <label class="form-label text-muted small fw-bold">GROUP NAME</label>
                        <input type="text" name="name" class="form-control" placeholder="e.g. Seven Knights" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-warning px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addHeroModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Add Hero to <span id="modalGroupName"
                            class="text-warning fw-bold"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/codex/hero/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body row g-4">
                        <div class="col-lg-4 border-end border-secondary">
                            <input type="hidden" name="group_id" id="modalGroupId">
                            <input type="hidden" name="return_cat_id" value="<%= activeCatId %>">

                            <div class="mb-4 text-center">
                                <div id="previewSelected"
                                    class="d-flex align-items-center justify-content-center text-muted border border-secondary rounded bg-black mx-auto"
                                    style="width: 140px; aspect-ratio: 3/4; overflow: hidden;">
                                    <small>No Image</small>
                                </div>
                                <div class="mt-2 text-warning fw-bold small" id="previewName">Select an image</div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">SELECTED IMAGE FILE</label>
                                <input type="text" name="image_name" id="selectedImageInput"
                                    class="form-control form-control-sm text-warning fw-bold" readonly required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">SKILL FOLDER</label>
                                <input type="text" name="skill_folder" id="skillFolderInput"
                                    class="form-control form-control-sm" placeholder="Auto-fill...">
                                <small class="text-muted" style="font-size: 0.7rem;">Folder in
                                    <code>public/images/skill/</code></small>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="text-white fw-bold">Select Hero Image</label>
                                <div class="search-wrapper" style="width: 200px;">
                                    <i class="bi bi-search"
                                        style="position:absolute; left:12px; top:50%; transform:translateY(-50%); color:#666;"></i>
                                    <input type="text" id="imgSearch" class="form-control form-control-sm text-white"
                                        style="padding-left:35px; border-radius:20px; background:#000; border:1px solid #333;"
                                        placeholder="Search..." onkeyup="filterImages()">
                                </div>
                            </div>

                            <div class="image-selector-container pe-2" style="max-height: 400px; overflow-y: auto;">
                                <div class="row g-2" id="imageGrid">
                                    <% availableHeroImages.forEach(img=> { %>
                                        <div class="col-3 col-sm-3 col-md-2 img-item-col">
                                            <div class="selectable-image" onclick="selectImage(this, '<%= img %>')">
                                                <img src="/images/heroes/<%= img %>" loading="lazy">
                                                <div class="img-name-overlay">
                                                    <%= img %>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-warning px-5 fw-bold">Save Hero</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="skillManagerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <div class="d-flex align-items-center gap-3">
                        <h5 class="modal-title text-white">Skill Priority: <span id="skillHeroName"
                                class="text-warning"></span></h5>
                    </div>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted small mb-3"><i class="bi bi-info-circle me-1"></i> Click skills in the order
                        you want them to be used (1, 2, 3...). Click again to unselect.</p>
                    <div id="skillGridContainer" class="skill-grid"></div>
                    <div id="noSkillsMsg" class="text-center py-5 text-muted d-none">
                        <i class="bi bi-exclamation-triangle display-4 mb-2"></i>
                        <p>No skills found in folder.</p>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success px-4 fw-bold" onclick="saveSkillPriority()">
                        <i class="bi bi-save me-1"></i> Save Priority
                    </button>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            // --- Add Hero & General Functions ---
            function openAddHeroModal(groupId, groupName) {
                document.getElementById('modalGroupId').value = groupId;
                document.getElementById('modalGroupName').innerText = groupName;
                document.getElementById('selectedImageInput').value = '';
                document.getElementById('skillFolderInput').value = '';
                document.getElementById('previewSelected').innerHTML = '<small>No Image</small>';
                document.getElementById('previewName').innerText = 'Select an image';
                document.querySelectorAll('.selectable-image').forEach(el => el.classList.remove('selected'));
                new bootstrap.Modal(document.getElementById('addHeroModal')).show();
            }

            function selectImage(el, filename) {
                document.querySelectorAll('.selectable-image').forEach(div => div.classList.remove('selected'));
                el.classList.add('selected');
                document.getElementById('selectedImageInput').value = filename;
                const folderName = filename.replace(/\.[^/.]+$/, "");
                document.getElementById('skillFolderInput').value = folderName;
                document.getElementById('previewSelected').innerHTML = `<img src="/images/heroes/${filename}" style="width:100%; height:100%; object-fit:cover;">`;
                document.getElementById('previewName').innerText = filename;
            }

            function filterImages() {
                const input = document.getElementById('imgSearch').value.toLowerCase();
                const cols = document.getElementsByClassName('img-item-col');
                for (let col of cols) {
                    const txt = col.innerText || col.textContent;
                    col.style.display = txt.toLowerCase().includes(input) ? "" : "none";
                }
            }

            // --- Skill Priority Manager Functions ---
            let currentHeroId = null;
            let currentSkillFolder = '';
            let currentPriorityList = [];

            function openSkillManager(id, name, folder, allSkills, savedOrder) {
                currentHeroId = id;
                currentSkillFolder = folder;
                document.getElementById('skillHeroName').innerText = name;

                currentPriorityList = savedOrder.filter(s => allSkills.includes(s));
                const grid = document.getElementById('skillGridContainer');
                const noMsg = document.getElementById('noSkillsMsg');
                grid.innerHTML = '';
                if (!allSkills || allSkills.length === 0) {
                    noMsg.classList.remove('d-none');
                } else {
                    noMsg.classList.add('d-none');
                    allSkills.forEach(filename => {
                        const div = document.createElement('div');
                        div.className = 'skill-priority-item';
                        div.dataset.file = filename;
                        div.onclick = () => toggleSkillPriority(filename);
                        div.innerHTML = `<img src="/images/skill/${folder}/${filename}" draggable="false"><div class="priority-badge"></div>`;
                        grid.appendChild(div);
                    });
                    updateSkillVisuals();
                }
                new bootstrap.Modal(document.getElementById('skillManagerModal')).show();
            }

            function toggleSkillPriority(filename) {
                const index = currentPriorityList.indexOf(filename);
                if (index > -1) { currentPriorityList.splice(index, 1); } else { currentPriorityList.push(filename); }
                updateSkillVisuals();
            }

            function updateSkillVisuals() {
                const items = document.querySelectorAll('.skill-priority-item');
                items.forEach(item => {
                    const file = item.dataset.file;
                    const idx = currentPriorityList.indexOf(file);
                    if (idx > -1) {
                        item.classList.add('selected');
                        item.querySelector('.priority-badge').innerText = idx + 1;
                    } else {
                        item.classList.remove('selected');
                        item.querySelector('.priority-badge').innerText = '';
                    }
                });
            }

            function saveSkillPriority() {
                if (!currentHeroId) return;
                const btn = document.querySelector('#skillManagerModal .btn-success');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';
                btn.disabled = true;
                const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                fetch('/admin/api/codex/save_skill_order', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ hero_id: currentHeroId, skill_order: currentPriorityList })
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) { window.location.reload(); } else {
                            alert('Error: ' + (data.error || 'Unknown error'));
                            btn.innerHTML = originalText; btn.disabled = false;
                        }
                    })
                    .catch(err => {
                        console.error(err); alert('Connection error');
                        btn.innerHTML = originalText; btn.disabled = false;
                    });
            }
        </script>
</body>

</html>