<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
        <link rel="stylesheet" href="/css/pages/admin/codex_pet_manager.css">
</head>

<body class="text-light">

    <nav class="navbar-modern">
        <div class="d-flex align-items-center gap-3">
            <img src="/images/about_website/logo_seven_knights_rebirth.png" alt="Logo" style="height: 40px;">
            <span class="nav-brand-text">7K Rebirth <span style="font-weight:400; opacity:0.7;">| Pet
                    Codex</span></span>
        </div>
        <div class="d-flex align-items-center gap-3">
            <a href="/admin/dashboard" class="nav-btn"><i class="bi bi-grid-fill"></i> Dashboard</a>
            <a href="/admin/logout" class="nav-btn"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </div>
    </nav>

    <div class="codex-layout">
        <div class="sidebar-panel">
            <div class="sidebar-header">
                <span class="fw-bold text-white"><i class="bi bi-collection me-2 text-theme"></i>Groups</span>
                <button class="btn btn-sm btn-outline-theme border-0" data-bs-toggle="modal"
                    data-bs-target="#addGroupModal"><i class="bi bi-plus-lg"></i></button>
            </div>
            <div class="group-list">
                <% if(groups && groups.length> 0) { %>
                    <% groups.forEach(grp=> { %>
                        <div class="group-wrapper <%= activeGroupId == grp.id ? 'active' : '' %>">
                            <a href="/admin/codex/pet?cat_id=<%= activeCatId %>&group_id=<%= grp.id %>"
                                class="group-link">
                                <span>
                                    <%= grp.name %>
                                </span>
                            </a>
                            <div class="group-actions">
                                <form action="/admin/api/codex/group/delete" method="POST"
                                    onsubmit="return confirm('Delete Group: <%= grp.name %>? This will delete all pets inside!');">
                                    <input type="hidden" name="id" value="<%= grp.id %>">
                                    <input type="hidden" name="type" value="pet">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button type="submit" class="btn btn-sm text-secondary p-0 border-0 hover-danger"><i
                                            class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <div class="text-center mt-5 text-muted"><small>No groups found</small></div>
                                <% } %>
            </div>
        </div>

        <div class="content-panel">
            <div class="top-tabs-bar">
                <span class="text-muted small fw-bold me-2">CATEGORIES:</span>
                <% if(categories && categories.length> 0) { %>
                    <% categories.forEach(cat=> { %>
                        <div class="cat-tab-wrapper <%= activeCatId == cat.id ? 'active' : '' %>">
                            <a href="/admin/codex/pet?cat_id=<%= cat.id %>" class="cat-link">
                                <%= cat.name %>
                            </a>
                            <form action="/admin/api/codex/category/delete" method="POST"
                                onsubmit="return confirm('Delete Category: <%= cat.name %>?');" class="d-flex">
                                <input type="hidden" name="id" value="<%= cat.id %>">
                                <input type="hidden" name="type" value="pet">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-sm p-0 text-secondary border-0"
                                    title="Delete Category"><i class="bi bi-x"></i></button>
                            </form>
                        </div>
                        <% }) %>
                            <% } %>
                                <button type="button" class="btn btn-sm btn-outline-theme rounded-circle ms-2"
                                    style="width:30px;height:30px;" data-bs-toggle="modal"
                                    data-bs-target="#addCategoryModal"><i class="bi bi-plus-lg"></i></button>
            </div>

            <div class="hero-grid-container">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <% const currentGroup=groups.find(g=> g.id == activeGroupId); %>
                            <h3 class="m-0 text-white fw-bold">
                                <%= currentGroup ? currentGroup.name : 'Select a Group' %>
                            </h3>
                    </div>
                    <% if(activeGroupId) { %>
                        <button class="btn btn-theme px-4 rounded-pill shadow-sm"
                            onclick="openAddPetModal('<%= activeGroupId %>', '<%= currentGroup ? currentGroup.name : '' %>')">
                            <i class="bi bi-plus-lg me-1"></i> Add Pet
                        </button>
                        <% } %>
                </div>

                <div class="row g-3">
                    <% if(pets.length===0) { %>
                        <div class="col-12 text-center py-5 text-muted"
                            style="border: 2px dashed #333; border-radius: 10px;">
                            <h5>No pets in this group</h5>
                        </div>
                        <% } %>

                            <% pets.forEach(pet=> { %>
                                <div class="col-6 col-sm-4 col-md-3 col-xl-2">
                                    <div class="hero-card">
                                        <img src="/images/pets/<%= pet.image_name %>" class="hero-img">
                                        <div class="hero-name">
                                            <%= pet.name %>
                                        </div>
                                        <a href="/admin/codex/pet/delete/<%= pet.id %>?cat_id=<%= activeCatId %>&group_id=<%= activeGroupId %>"
                                            class="btn btn-outline-danger btn-sm w-100 mt-auto"
                                            onclick="return confirm('Delete <%= pet.name %>?')">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                                <% }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addCategoryModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/admin/codex/category/add" method="POST">
                    <input type="hidden" name="type" value="pet">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body">
                        <label class="form-label text-muted small fw-bold">CATEGORY NAME</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addGroupModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form action="/admin/codex/group/add" method="POST">
                    <input type="hidden" name="type" value="pet">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body">
                        <input type="hidden" name="category_id" value="<%= activeCatId %>">
                        <label class="form-label text-muted small fw-bold">GROUP NAME</label>
                        <input type="text" name="name" class="form-control" required>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-4">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addPetModal" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-white">Add Pet to <span id="modalGroupName"
                            class="text-theme fw-bold"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/codex/pet/add" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="modal-body row g-4">
                        <div class="col-lg-4 border-end border-secondary">
                            <input type="hidden" name="group_id" id="modalGroupId">
                            <input type="hidden" name="return_cat_id" value="<%= activeCatId %>">
                            <div class="mb-4 text-center">
                                <div id="previewSelected"
                                    class="d-flex align-items-center justify-content-center text-muted border border-secondary rounded bg-black mx-auto"
                                    style="width: 140px; aspect-ratio: 3/4;">
                                    <small>No Image</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">SELECTED FILE</label>
                                <input type="text" name="image_name" id="selectedImageInput"
                                    class="form-control form-control-sm text-theme fw-bold" readonly required>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="d-flex justify-content-between mb-3">
                                <label class="text-white fw-bold">Select Pet Image</label>
                                <input type="text" id="imgSearch" class="form-control form-control-sm text-white"
                                    style="width: 200px; background:#000; border-color:#333;" placeholder="Search..."
                                    onkeyup="filterImages()">
                            </div>
                            <div class="row g-2" style="max-height: 400px; overflow-y: auto;">
                                <% availablePetImages.forEach(img=> { %>
                                    <div class="col-3 col-sm-3 col-md-2 img-item-col">
                                        <div class="selectable-image" onclick="selectImage(this, '<%= img %>')">
                                            <img src="/images/pets/<%= img %>" loading="lazy">
                                        </div>
                                    </div>
                                    <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="submit" class="btn btn-theme px-5 fw-bold">Save Pet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            function openAddPetModal(groupId, groupName) {
                document.getElementById('modalGroupId').value = groupId;
                document.getElementById('modalGroupName').innerText = groupName;
                document.getElementById('selectedImageInput').value = '';
                document.getElementById('previewSelected').innerHTML = '<small>No Image</small>';
                document.querySelectorAll('.selectable-image').forEach(el => el.classList.remove('selected'));
                new bootstrap.Modal(document.getElementById('addPetModal')).show();
            }

            function selectImage(el, filename) {
                document.querySelectorAll('.selectable-image').forEach(div => div.classList.remove('selected'));
                el.classList.add('selected');
                document.getElementById('selectedImageInput').value = filename;
                document.getElementById('previewSelected').innerHTML = `<img src="/images/pets/${filename}" style="width:100%; height:100%; object-fit:cover;">`;
            }

            function filterImages() {
                const input = document.getElementById('imgSearch').value.toLowerCase();
                const cols = document.getElementsByClassName('img-item-col');
                for (let col of cols) {
                    const img = col.querySelector('img');
                    const txt = img ? img.src.split('/').pop() : '';
                    col.style.display = txt.toLowerCase().includes(input) ? "" : "none";
                }
            }
        </script>
</body>

</html>