<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head') %>
        <link rel="stylesheet" href="/css/pages/admin/guildwar_manager.css">
</head>

<body class="text-light">

    <nav class="navbar-modern">
        <div class="nav-brand-box">
            <img src="/images/about_website/logo_seven_knights_rebirth.png" alt="Logo" class="site-logo">
            <span class="nav-title">7K Rebirth <span style="font-weight:400; opacity:0.7;">| Guild War</span></span>
        </div>
        <div class="nav-actions">
            <button class="btn-add-nav" onclick="openAddModal()">
                <i class="bi bi-plus-lg"></i> Add Comp
            </button>
            <a href="/admin/dashboard" class="nav-btn"><i class="bi bi-grid-fill"></i> Panel</a>
            <a href="/admin/logout" class="nav-btn"><i class="bi bi-box-arrow-right"></i> Logout</a>
        </div>
    </nav>

    <div class="container main-content">
        <% if(comps.length===0) { %>
            <div class="text-center py-5 text-muted">
                <i class="bi bi-shield-slash display-1" style="color: #333;"></i>
                <p class="mt-3 text-secondary">No Guild War teams created yet.</p>
            </div>
            <% } %>

                <% comps.forEach(comp=> { %>
                    <div class="gw-card">
                        <div class="gw-header">
                            <div class="gw-title">
                                <%= comp.team_name %>
                            </div>
                            <div class="gw-actions">
                                <button class="btn-icon" onclick="editComp(<%= JSON.stringify(comp) %>)"><i
                                        class="bi bi-pencil-fill"></i></button>
                                <button class="btn-icon del" onclick="deleteComp(<%= comp.id %>)"><i
                                        class="bi bi-trash-fill"></i></button>
                            </div>
                        </div>
                        <div class="gw-body">

                            <div class="gw-content-row">
                                <div class="info-col">
                                    <div class="formation-display">
                                        <img src="/images/formation/<%= comp.formation %>.png">
                                        <span>
                                            <%= comp.formation %>
                                        </span>
                                    </div>
                                </div>

                                <div class="heroes-grid">
                                    <% for(let i=0; i<3; i++) { %>
                                        <% let hero=comp.heroes[i]; let posClass='pos-back' ; if (comp.formation==='1-4'
                                            && i===1) posClass='pos-front' ; else if (comp.formation==='4-1' && (i===0
                                            || i===2)) posClass='pos-front' ; %>

                                            <div class="hero-unit <%= posClass %>">
                                                <div class="hero-img-box">
                                                    <% if(hero) { %>
                                                        <img src="/images/heroes/<%= hero %>">
                                                        <% } %>
                                                </div>

                                                <% if(hero) { %>
                                                    <div class="skills-col">
                                                        <% [2, 3].forEach(skillNum=> { %>
                                                            <% let key=`${i}_${skillNum}`; let orderNum=null; let
                                                                found=comp.skill_order.find(o=> o.key === key);
                                                                if(found) orderNum = found.order;
                                                                let heroName = hero.replace(/\.[^/.]+$/, "");
                                                                %>
                                                                <div class="skill-icon <%= orderNum ? 'active' : '' %>">
                                                                    <img src="/images/skill/<%= heroName %>/<%= skillNum %>.png"
                                                                        onerror="this.src='/images/skill/placeholder.png'">
                                                                    <% if(orderNum) { %>
                                                                        <div class="skill-badge">
                                                                            <%= orderNum %>
                                                                        </div>
                                                                        <% } %>
                                                                </div>
                                                                <% }) %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <% } %>
                                </div>

                                <div class="pet-display">
                                    <div class="pet-slot-card">
                                        <% if(comp.pet) { %>
                                            <img src="/images/pets/<%= comp.pet %>">
                                            <% } else { %>
                                                <i class="bi bi-plus text-secondary" style="line-height:60px;"></i>
                                                <% } %>
                                    </div>
                                    <div class="pet-label">PET</div>
                                </div>
                            </div>

                            <% if(comp.description && comp.description.trim() !=="" ) { %>
                                <div class="gw-desc-row">
                                    <div class="desc-box">
                                        <i class="bi bi-info-circle-fill"></i>
                                        <span>
                                            <%= comp.description %>
                                        </span>
                                    </div>
                                </div>
                                <% } %>

                        </div>
                    </div>
                    <% }) %>
    </div>

    <div class="modal fade" id="gwModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="modal-title fw-bold text-warning" id="modalTitle">TEAM EDITOR</h6>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="gwForm">
                        <input type="hidden" name="id" id="compId">

                        <div class="row mb-3">
                            <div class="col-7">
                                <label class="modal-label">Team Name</label>
                                <input type="text" name="team_name" id="teamName" class="form-control input-dark"
                                    required placeholder="e.g. Guild War Defense 1">
                            </div>
                            <div class="col-5">
                                <label class="modal-label text-end">Formation</label>
                                <div class="formation-selector">
                                    <div class="form-option">
                                        <input type="radio" name="formation" id="fmt_1-4" value="1-4" checked
                                            onchange="updateFormationUI('1-4')">
                                        <label for="fmt_1-4"><img src="/images/formation/1-4.png">
                                            <div>1-4</div>
                                        </label>
                                    </div>
                                    <div class="form-option">
                                        <input type="radio" name="formation" id="fmt_4-1" value="4-1"
                                            onchange="updateFormationUI('4-1')">
                                        <label for="fmt_4-1"><img src="/images/formation/4-1.png">
                                            <div>4-1</div>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="modal-label">Description</label>
                            <input type="text" name="description" id="teamDesc" class="form-control input-dark"
                                placeholder="Add note here...">
                        </div>

                        <div class="team-composition-area">
                            <div>
                                <label class="modal-label text-center mb-4 pt-2">HEROES & SKILLS</label>
                                <div class="hero-select-wrapper">
                                    <% for(let i=0; i<3; i++) { %>
                                        <div class="modal-hero-group" id="heroGroup_<%= i %>">
                                            <div class="modal-hero-slot" id="heroSlot_<%= i %>"
                                                onclick="openHeroPicker(<%= i %>)">
                                                <i class="bi bi-plus-lg"></i>
                                                <img class="hero-main" id="heroImg_<%= i %>" style="display:none;">
                                                <button type="button" onclick="removeHero(event, <%= i %>)"
                                                    id="btnRemoveHero_<%= i %>"
                                                    class="btn-close btn-close-white position-absolute top-0 end-0 p-2 bg-danger"
                                                    style="display:none; transform: scale(0.6);"></button>
                                            </div>
                                            <input type="hidden" name="heroes[]" id="heroInput_<%= i %>">
                                            <div class="modal-skills" id="skillContainer_<%= i %>"></div>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <div class="pet-section">
                                <label class="modal-label text-center mb-4 pt-2">PET</label>
                                <div class="modal-pet-slot" onclick="openPetPicker()" id="petSlotDisplay">
                                    <i class="bi bi-plus-lg text-secondary"></i>
                                </div>
                                <input type="hidden" name="pet" id="petInput">
                            </div>
                        </div>

                        <input type="hidden" name="skill_order_json" id="skillOrderJson">
                    </form>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm"
                        onclick="saveComp()">
                        <i class="bi bi-check2-circle me-1"></i> SAVE TEAM
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="heroPickerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header border-secondary py-2">
                    <input type="text" id="pickerSearch"
                        class="form-control form-control-sm bg-dark text-light border-secondary"
                        placeholder="Search Hero...">
                </div>
                <div class="modal-body">
                    <div class="picker-grid">
                        <% heroes.forEach(h=> { %>
                            <div class="picker-item" onclick="selectHero('<%= h.filename %>')">
                                <img src="/images/heroes/<%= h.filename %>" title="<%= h.name %>">
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="petPickerModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header border-secondary py-2">
                    <h6 class="modal-title">Select Pet</h6>
                </div>
                <div class="modal-body">
                    <div class="picker-grid">
                        <% pets.forEach(p=> { %>
                            <div class="picker-item" onclick="selectPet('<%= p %>')">
                                <img src="/images/pets/<%= p %>">
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

        <script>
            let currentCompId = null;
            let skillSequence = [];
            let currentSlot = 0;

            const gwModal = new bootstrap.Modal(document.getElementById('gwModal'));
            const heroPicker = new bootstrap.Modal(document.getElementById('heroPickerModal'));
            const petPicker = new bootstrap.Modal(document.getElementById('petPickerModal'));

            function updateFormationUI(fmt) {
                for (let i = 0; i < 3; i++) {
                    const group = document.getElementById(`heroGroup_${i}`);
                    group.classList.remove('slot-front', 'slot-back');
                }
                if (fmt === '1-4') {
                    // 1-4: 1 Middle Front, 0,2 Back
                    document.getElementById('heroGroup_1').classList.add('slot-front');
                    document.getElementById('heroGroup_0').classList.add('slot-back');
                    document.getElementById('heroGroup_2').classList.add('slot-back');
                } else if (fmt === '4-1') {
                    // 4-1: 0,2 Front, 1 Back
                    document.getElementById('heroGroup_0').classList.add('slot-front');
                    document.getElementById('heroGroup_2').classList.add('slot-front');
                    document.getElementById('heroGroup_1').classList.add('slot-back');
                }
            }

            function openAddModal() {
                resetForm();
                document.getElementById('modalTitle').innerText = "NEW COMP";
                updateFormationUI('1-4');
                gwModal.show();
            }

            function editComp(comp) {
                resetForm();
                document.getElementById('modalTitle').innerText = "EDIT COMP";
                document.getElementById('compId').value = comp.id;
                document.getElementById('teamName').value = comp.team_name;
                document.getElementById('teamDesc').value = comp.description || '';

                document.querySelector(`input[name="formation"][value="${comp.formation}"]`).checked = true;
                updateFormationUI(comp.formation);

                if (comp.pet) selectPet(comp.pet);

                skillSequence = comp.skill_order || [];

                comp.heroes.forEach((h, i) => {
                    if (h && i < 3) setHeroSlot(i, h);
                });

                updateSkillUI();
                gwModal.show();
            }

            function resetForm() {
                document.getElementById('gwForm').reset();
                document.getElementById('compId').value = '';
                document.getElementById('petInput').value = '';
                document.getElementById('petSlotDisplay').innerHTML = '<i class="bi bi-plus-lg text-secondary"></i>';
                document.getElementById('fmt_1-4').checked = true;
                skillSequence = [];
                for (let i = 0; i < 3; i++) removeHero(null, i);
            }

            // --- Pet ---
            function openPetPicker() { petPicker.show(); }
            function selectPet(filename) {
                document.getElementById('petInput').value = filename;
                document.getElementById('petSlotDisplay').innerHTML = `<img src="/images/pets/${filename}" style="width:100%; height:100%; object-fit:cover;">`;
                petPicker.hide();
            }

            // --- Hero ---
            function openHeroPicker(i) {
                currentSlot = i;
                heroPicker.show();
            }
            function selectHero(filename) {
                for (let i = 0; i < 3; i++) {
                    if (i !== currentSlot && document.getElementById(`heroInput_${i}`).value === filename) {
                        alert('Hero already selected!');
                        return;
                    }
                }
                setHeroSlot(currentSlot, filename);
                heroPicker.hide();
            }
            function setHeroSlot(i, filename) {
                const input = document.getElementById(`heroInput_${i}`);
                const img = document.getElementById(`heroImg_${i}`);
                const btn = document.getElementById(`btnRemoveHero_${i}`);
                const slot = document.getElementById(`heroSlot_${i}`);

                input.value = filename;
                img.src = `/images/heroes/${filename}`;
                img.style.display = 'block';
                btn.style.display = 'block';
                slot.querySelector('i').style.display = 'none';

                skillSequence = skillSequence.filter(s => !s.key.startsWith(`${i}_`));
                renderSkillButtons(i, filename);
                updateSkillUI();
            }
            function removeHero(e, i) {
                if (e) e.stopPropagation();
                document.getElementById(`heroInput_${i}`).value = '';
                const img = document.getElementById(`heroImg_${i}`);
                const btn = document.getElementById(`btnRemoveHero_${i}`);
                const slot = document.getElementById(`heroSlot_${i}`);

                img.src = ''; img.style.display = 'none';
                btn.style.display = 'none';
                slot.querySelector('i').style.display = 'block';

                document.getElementById(`skillContainer_${i}`).innerHTML = '';
                skillSequence = skillSequence.filter(s => !s.key.startsWith(`${i}_`));
                reorderSequence();
            }

            // --- Skill Logic ---
            function renderSkillButtons(slotIdx, filename) {
                const container = document.getElementById(`skillContainer_${slotIdx}`);
                const heroName = filename.replace(/\.[^/.]+$/, "");

                let html = '';
                [2, 3].forEach(skillNum => {
                    html += `
                    <div class="modal-skill-icon" id="skillBtn_${slotIdx}_${skillNum}" onclick="toggleSkill(${slotIdx}, ${skillNum})">
                        <img src="/images/skill/${heroName}/${skillNum}.png" onerror="this.style.opacity=0.2">
                        <div class="skill-badge" id="badge_${slotIdx}_${skillNum}" style="display:none; position:absolute; top:-4px; right:-4px; width:14px; height:14px; background:#ffc107; color:#000; border-radius:50%; font-size:9px; align-items:center; justify-content:center;"></div>
                    </div>
                `;
                });
                container.innerHTML = html;
            }

            function toggleSkill(slotIdx, skillNum) {
                const key = `${slotIdx}_${skillNum}`;
                const existingIdx = skillSequence.findIndex(s => s.key === key);

                if (existingIdx !== -1) {
                    skillSequence.splice(existingIdx, 1);
                } else {
                    if (skillSequence.length >= 3) {
                        alert("Max 3 skills!");
                        return;
                    }
                    skillSequence.push({ key: key, order: 0 });
                }
                reorderSequence();
            }

            function reorderSequence() {
                skillSequence.forEach((item, index) => item.order = index + 1);
                updateSkillUI();
            }

            function updateSkillUI() {
                document.querySelectorAll('.modal-skill-icon').forEach(el => {
                    el.classList.remove('selected');
                    el.querySelector('.skill-badge')?.remove();
                });

                skillSequence.forEach(item => {
                    const btn = document.getElementById(`skillBtn_${item.key}`);
                    if (btn) {
                        btn.classList.add('selected');
                        if (!btn.querySelector('.skill-badge')) {
                            const badge = document.createElement('div');
                            badge.className = 'skill-badge';
                            badge.innerText = item.order;
                            btn.appendChild(badge);
                        } else {
                            btn.querySelector('.skill-badge').innerText = item.order;
                        }
                    }
                });
            }

            function saveComp() {
                const form = document.getElementById('gwForm');
                const formData = new FormData(form);
                const payload = Object.fromEntries(formData);

                payload['heroes[]'] = [];
                for (let i = 0; i < 3; i++) {
                    payload['heroes[]'].push(document.getElementById(`heroInput_${i}`).value);
                }
                payload.skill_order_json = JSON.stringify(skillSequence);

                const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                fetch('/admin/api/save_guildwar_comp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': csrfToken
                    },
                    body: JSON.stringify(payload)
                })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) location.reload();
                        else alert('Error: ' + data.error);
                    });
            }

            function deleteComp(id) {
                if (!confirm('Delete this team?')) return;
                const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
                fetch('/admin/api/delete_guildwar_comp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ id })
                })
                    .then(res => res.json())
                    .then(data => location.reload());
            }

            document.getElementById('pickerSearch').addEventListener('keyup', function (e) {
                const term = e.target.value.toLowerCase();
                document.querySelectorAll('.picker-item').forEach(item => {
                    const name = item.querySelector('img').title.toLowerCase();
                    item.style.display = name.includes(term) ? 'block' : 'none';
                });
            });
        </script>
</body>

</html>