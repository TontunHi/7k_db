<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <style>
        /* --- Dark & Gold Theme (Pet Side) --- */
        body { 
            background-color: #050505; 
            color: #e0e0e0; 
            font-family: 'Kanit', sans-serif;
            padding-top: 64px;
        }
        
        .codex-layout { display: flex; min-height: calc(100vh - 64px); }

        /* Sidebar */
        .sidebar-panel {
            width: 280px;
            background: #0f0f0f;
            border-right: 1px solid #222;
            flex-shrink: 0;
            display: flex; flex-direction: column;
            position: fixed; top: 64px; bottom: 0; left: 0;
            z-index: 100;
        }

        .sidebar-header { padding: 20px; background: #0a0a0a; border-bottom: 1px solid #222; }
        .sidebar-title { font-size: 1.1rem; font-weight: 700; color: #fff; text-transform: uppercase; letter-spacing: 1px; }

        .group-list { flex: 1; overflow-y: auto; padding: 10px 0; }
        .group-list::-webkit-scrollbar { width: 4px; }
        .group-list::-webkit-scrollbar-thumb { background: #333; border-radius: 2px; }

        .group-item {
            display: flex; align-items: center; justify-content: space-between;
            padding: 12px 25px; color: #888; text-decoration: none;
            transition: all 0.2s; border-left: 3px solid transparent;
        }
        .group-item:hover { background: rgba(255, 255, 255, 0.03); color: #fff; padding-left: 30px; }
        .group-item.active {
            background: linear-gradient(90deg, rgba(255, 193, 7, 0.1), transparent);
            color: #ffc107; border-left-color: #ffc107; font-weight: 600; padding-left: 30px;
        }

        /* Content */
        .content-panel { flex: 1; margin-left: 280px; padding: 0; background: #050505; min-height: 100vh; }

        .top-tabs-bar {
            padding: 15px 30px; background: rgba(25, 25, 25, 0.95); backdrop-filter: blur(10px);
            border-bottom: 1px solid #222; position: sticky; top: 64px; z-index: 90;
            display: flex; gap: 15px; overflow-x: auto; align-items: center;
        }
        
        .cat-tab {
            padding: 8px 20px; border-radius: 30px; background: #1a1a1a;
            border: 1px solid #333; color: #aaa; text-decoration: none; font-size: 0.9rem;
            white-space: nowrap; transition: all 0.3s ease;
        }
        .cat-tab:hover { background: #333; color: #fff; transform: translateY(-2px); }
        .cat-tab.active {
            background: #ffc107; color: #000; border-color: #ffc107; font-weight: 700;
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.4);
        }

        /* Grid */
        .hero-grid-container { padding: 30px; }
        .section-title { font-size: 2rem; font-weight: 800; color: #fff; margin-bottom: 5px; text-shadow: 0 0 20px rgba(255, 193, 7, 0.2); }
        .section-subtitle { color: #666; margin-bottom: 30px; font-size: 0.9rem; }

        .hero-card {
            background: #121212; border: 1px solid #2a2a2a; border-radius: 12px;
            overflow: hidden; position: relative; transition: all 0.3s; cursor: pointer;
            height: 100%; display: flex; flex-direction: column;
        }
        .hero-card:hover {
            transform: translateY(-7px); border-color: #ffc107;
            box-shadow: 0 10px 30px rgba(255, 193, 7, 0.15); z-index: 2;
        }
        .hero-img-wrapper { width: 100%; aspect-ratio: 3/4; overflow: hidden; background: #000; }
        .hero-img { width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease; }
        .hero-card:hover .hero-img { transform: scale(1.05); }
        
        .hero-info {
            padding: 15px; text-align: center; background: #161616;
            border-top: 1px solid #222; flex-grow: 1; display: flex; align-items: center; justify-content: center;
        }
        .hero-name { font-size: 1rem; font-weight: 600; color: #e0e0e0; margin: 0; transition: color 0.3s; }
        .hero-card:hover .hero-name { color: #ffc107; }

        @media (max-width: 991px) {
            .sidebar-panel { display: none; }
            .content-panel { margin-left: 0; }
            .top-tabs-bar { padding: 10px 15px; }
            .hero-grid-container { padding: 15px; }
        }
    </style>
</head>
<body>
    
    <%- include('../partials/navbar') %>

    <div class="codex-layout">
        
        <aside class="sidebar-panel">
            <div class="sidebar-header">
                <div class="sidebar-title">
                    <i class="bi bi-paw-fill text-warning"></i> Pet Groups
                </div>
            </div>
            <div class="group-list">
                <% if(groups && groups.length > 0) { %>
                    <% groups.forEach(grp => { %>
                        <a href="/codex/pet?cat_id=<%= activeCatId %>&group_id=<%= grp.id %>" 
                           class="group-item <%= activeGroupId == grp.id ? 'active' : '' %>">
                           <span><%= grp.name %></span>
                           <% if(activeGroupId == grp.id) { %> <i class="bi bi-chevron-right small"></i> <% } %>
                        </a>
                    <% }) %>
                <% } else { %>
                    <div class="text-center p-4 text-muted small">No Groups</div>
                <% } %>
            </div>
        </aside>

        <main class="content-panel">
            <div class="top-tabs-bar">
                <span class="text-white small fw-bold me-2 text-uppercase opacity-50" style="letter-spacing: 1px;">Categories:</span>
                <% if(categories && categories.length > 0) { %>
                    <% categories.forEach(cat => { %>
                        <a href="/codex/pet?cat_id=<%= cat.id %>" 
                           class="cat-tab <%= activeCatId == cat.id ? 'active' : '' %>">
                           <%= cat.name %>
                        </a>
                    <% }) %>
                <% } %>
            </div>

            <div class="hero-grid-container">
                <% const currentGroup = groups.find(g => g.id == activeGroupId); %>
                
                <div class="mb-4">
                    <h1 class="section-title"><%= currentGroup ? currentGroup.name : 'Select a Group' %></h1>
                    <p class="section-subtitle">
                        <%= currentGroup ? `Collection of pets from ${currentGroup.name}.` : 'Select a pet group to view collection.' %>
                    </p>
                </div>

                <div class="row g-4">
                    <% if(pets.length === 0) { %>
                        <div class="col-12">
                            <div class="text-center py-5 text-muted" style="border: 2px dashed #222; border-radius: 12px;">
                                <i class="bi bi-box-seam display-4 mb-3 opacity-25"></i>
                                <h5>No pets found here</h5>
                            </div>
                        </div>
                    <% } %>

                    <% pets.forEach(pet => { %>
                        <div class="col-6 col-sm-4 col-md-3 col-xl-2">
                            <div class="hero-card">
                                <div class="hero-img-wrapper">
                                    <img src="/images/pets/<%= pet.image_name %>" class="hero-img" loading="lazy" alt="<%= pet.name %>">
                                </div>
                                <div class="hero-info">
                                    <h3 class="hero-name"><%= pet.name %></h3>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>
    </div>

    <%- include('../partials/footer') %>
</body>
</html>