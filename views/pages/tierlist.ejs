<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <script src="https://html2canvas.hertzen.com/dist/html2canvas.min.js"></script>

        <link rel="stylesheet" href="/css/pages/tierlist.css">
</head>

<body class="d-flex flex-column h-100 bg-main text-light">

    <%- include('../partials/navbar') %>

        <main class="flex-shrink-0 mt-5 pt-4">
            <div class="container py-5">

                <div class="tier-header">
                    <h1 class="tier-title">
                        <%= category %> Tier List
                    </h1>
                    <p class="tier-subtitle">Best characters ranking for <%= category %> content</p>
                </div>

                <div class="cat-switcher">
                    <a href="/tierlist/pvp" class="cat-btn <%= category === 'PVP' ? 'active' : '' %>">PVP</a>
                    <a href="/tierlist/pve" class="cat-btn <%= category === 'PVE' ? 'active' : '' %>">PVE</a>
                    <a href="/tierlist/pet" class="cat-btn <%= category === 'PET' ? 'active' : '' %>">PET</a>
                </div>

                <div class="tier-container" id="tierListContent">
                    <% ranks.forEach(rank=> { %>
                        <% if(tierData[rank] && tierData[rank].length> 0) { %>
                            <div class="tier-row" data-rank="<%= rank %>">
                                <div class="tier-rank">
                                    <img src="/images/logo_tiers/<%= rank %>.png" alt="<%= rank %>">
                                </div>
                                <div class="tier-content">
                                    <% tierData[rank].forEach(char=> { %>
                                        <div class="hero-card" title="<%= char.name %>">
                                            <img src="/images/<%= folder %>/<%= char.filename %>" loading="lazy">
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <% } %>
                                <% }) %>
                </div>

            </div>
        </main>

        <button class="btn-export-floating" onclick="exportTierList()" title="Save as Image">
            <i class="bi bi-camera"></i>
        </button>

        <div id="captureArea">
            <div class="cap-header">
                <div class="cap-title">
                    <h1>
                        <%= category %>
                    </h1>
                    <span>TIER LIST</span>
                </div>
                <div class="cap-logo">
                    <div>7K Rebirth</div>
                    <div>Database Guide</div>
                </div>
            </div>
            <div class="cap-body" id="capBody">
            </div>
            <div class="cap-footer">
                Generated by 7K Rebirth Database
            </div>
        </div>

        <%- include('../partials/footer') %>

            <script>
                function exportTierList() {
                    const sourceContainer = document.getElementById('tierListContent');
                    const captureBody = document.getElementById('capBody');
                    const captureArea = document.getElementById('captureArea');

                    // 1. Clear previous capture content
                    captureBody.innerHTML = '';

                    // 2. Clone Rows to Capture Area
                    const rows = sourceContainer.querySelectorAll('.tier-row');

                    rows.forEach(row => {
                        const rank = row.getAttribute('data-rank');
                        const heroCards = row.querySelectorAll('.hero-card');

                        // Create Cap Row
                        const capRow = document.createElement('div');
                        capRow.className = 'cap-row';

                        // Rank Col
                        const rankCol = document.createElement('div');
                        rankCol.className = 'cap-rank';
                        rankCol.innerHTML = `<img src="/images/logo_tiers/${rank}.png">`;

                        // Content Col
                        const contentCol = document.createElement('div');
                        contentCol.className = 'cap-content';

                        // Heroes
                        heroCards.forEach(card => {
                            const imgSrc = card.querySelector('img').src;

                            const capHero = document.createElement('div');
                            capHero.className = 'cap-hero';
                            capHero.innerHTML = `
                        <img src="${imgSrc}">
                        `;
                            contentCol.appendChild(capHero);
                        });

                        capRow.appendChild(rankCol);
                        capRow.appendChild(contentCol);
                        captureBody.appendChild(capRow);
                    });

                    // 3. Wait a bit then capture
                    setTimeout(() => {
                        html2canvas(captureArea, {
                            backgroundColor: '#121212',
                            scale: 2, // High Quality
                            useCORS: true
                        }).then(canvas => {
                            const link = document.createElement('a');
                            link.download = `7K-TierList-<%= category %>.png`;
                            link.href = canvas.toDataURL();
                            link.click();
                        });
                    }, 100);
                }
            </script>
</body>

</html>